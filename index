            <!-- RIGHT COLUMN -->
            <div class="lg:col-span-4 space-y-6">
                <!-- ANALYSIS -->
                <div class="glass-card p-6 space-y-6">
                    <h4 class="font-800 text-slate-800 uppercase tracking-widest text-[10px]">Spending Insights</h4>
                    <div id="progressBars" class="space-y-5"></div>
                    
                    <div class="pt-6 border-t border-slate-100 flex justify-between items-center">
                        <div>
                            <span class="text-slate-400 font-bold text-[9px] uppercase tracking-widest">Yearly Retention</span>
                            <p id="yearlySavings" class="text-xl font-800 text-indigo-600">RM 0</p>
                        </div>
                        <div class="bg-indigo-50 p-2 rounded-xl text-indigo-600">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/></svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL -->
    <div id="entryModal" class="hidden fixed inset-0 bg-slate-900/60 backdrop-blur-xl z-50 flex items-center justify-center p-6">
        <div class="bg-white p-8 w-full max-w-sm rounded-[32px] shadow-2xl">
            <h2 id="modalTitle" class="text-2xl font-800 tracking-tight text-slate-900 mb-6">Record Expense</h2>
            <input type="hidden" id="editId">
            <div class="space-y-4">
                <input id="inLabel" type="text" placeholder="Description" class="input-premium w-full text-sm">
                <input id="inVal" type="number" placeholder="0.00" class="input-premium w-full text-lg font-700">
                <div class="flex gap-2">
                    <select id="inCat" class="input-premium flex-1 appearance-none text-sm"></select>
                    <button onclick="toggleNewCat()" class="bg-slate-100 px-3 rounded-xl font-bold">+</button>
                </div>
                <div id="newCatBox" class="hidden p-4 bg-slate-50 rounded-2xl border-2 border-dashed border-slate-200 space-y-3">
                    <input id="newCatInput" type="text" placeholder="Tag Name" class="input-premium !bg-white text-xs">
                    <button onclick="saveNewCat()" class="w-full py-2 bg-slate-900 text-white rounded-lg text-[10px] font-bold uppercase">Add Category</button>
                </div>
            </div>
            <div class="flex gap-3 mt-8">
                <button onclick="closeModal()" class="flex-1 py-3 text-xs font-bold text-slate-400">Cancel</button>
                <button onclick="confirmEntry()" class="flex-1 py-3 text-xs font-bold btn-action">Save</button>
            </div>
        </div>
    </div>

    <script>
        let state = {
            salary: 5000,
            taxRate: 5,
            filter: 'all',
            categories: ['Bills', 'Food', 'Leisure', 'Transport'],
            entries: []
        };

        function refreshEverything() {
            localStorage.setItem('wallet_compact_v2', JSON.stringify(state));

            let totalPaid = 0;
            let pendingCount = 0;
            const categorySums = {};
            state.categories.forEach(c => categorySums[c] = 0);

            state.entries.forEach(e => {
                const amount = parseFloat(e.val) || 0;
                if (e.settled) {
                    totalPaid += amount;
                    if (categorySums[e.cat] !== undefined) categorySums[e.cat] += amount;
                } else { pendingCount++; }
            });

            const taxAmount = (state.salary * (state.taxRate / 100));
            const left = state.salary - taxAmount - totalPaid;

            const now = new Date();
            const daysLeft = new Date(now.getFullYear(), now.getMonth() + 1, 0).getDate() - now.getDate() + 1;
            const daily = left > 0 ? (left / daysLeft) : 0;
            const fmt = (num) => num.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 });
            
            document.getElementById('trueBalance').innerText = `RM ${fmt(left)}`;
            document.getElementById('totalDeductions').innerText = `RM ${fmt(totalPaid)}`;
            document.getElementById('dailyBudget').innerText = `RM ${fmt(daily)}`;
            document.getElementById('taxReserveDisplay').innerText = `RM ${fmt(taxAmount)}`;
            document.getElementById('daysRemaining').innerText = daysLeft;
            document.getElementById('yearlySavings').innerText = `RM ${fmt(left * 12)}`;
            
            // Update pending badge visibility and count
            const counterEl = document.getElementById('pendingCounter');
            const badgeEl = document.getElementById('pendingBadge');
            counterEl.innerText = pendingCount;
            badgeEl.style.display = pendingCount > 0 ? 'flex' : 'none';

            const bars = document.getElementById('progressBars');
            bars.innerHTML = state.categories.map(c => {
                if(categorySums[c] === 0) return '';
                const pct = state.salary > 0 ? (categorySums[c] / state.salary) * 100 : 0;
                return `
                    <div class="space-y-1.5">
                        <div class="flex justify-between text-[9px] font-bold uppercase tracking-widest text-slate-400">
                            <span>${c}</span><span>${Math.round(pct)}%</span>
                        </div>
                        <div class="h-1.5 bg-slate-100 rounded-full overflow-hidden">
                            <div class="h-full bg-indigo-500 rounded-full" style="width: ${pct}%"></div>
                        </div>
                    </div>
                `;
            }).join('');

            document.getElementById('inCat').innerHTML = state.categories.map(c => `<option value="${c}">${c}</option>`).join('');
            document.getElementById('filterBar').innerHTML = `<button onclick="updateFilter('all')" class="whitespace-nowrap px-3 py-1 rounded-lg text-[9px] font-900 uppercase tracking-widest transition-all ${state.filter === 'all' ? 'bg-indigo-600 text-white shadow-md' : 'bg-slate-100 text-slate-400'}">All</button>` + 
                state.categories.map(c => `
                    <button onclick="updateFilter('${c}')" class="whitespace-nowrap px-3 py-1 rounded-lg text-[9px] font-900 uppercase tracking-widest transition-all ${state.filter === c ? 'bg-indigo-600 text-white shadow-md' : 'bg-slate-100 text-slate-400'}">${c}</button>
                `).join('');

            renderList();
        }

        function renderList() {
            const list = document.getElementById('ledgerList');
            const filtered = state.filter === 'all' ? state.entries : state.entries.filter(e => e.cat === state.filter);
            
            list.innerHTML = filtered.length === 0 ? `<div class="py-20 text-center text-slate-300 font-bold uppercase tracking-widest text-[10px]">Empty</div>` :
                filtered.map(e => `
                    <div class="flex items-center justify-between p-4 item-row ${e.settled ? 'opacity-50' : ''}">
                        <div class="flex items-center gap-4 flex-1" onclick="togglePaid(${e.id})">
                            <div class="w-6 h-6 rounded-md border-2 flex items-center justify-center transition-all ${e.settled ? 'bg-emerald-500 border-emerald-500 text-white' : 'border-slate-200 text-transparent'}">
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="4" d="M5 13l4 4L19 7"/></svg>
                            </div>
                            <div>
                                <div class="flex items-center gap-2">
                                    <p class="text-xs font-bold text-slate-800">${e.label}</p>
                                    ${!e.settled ? '<span class="status-pill bg-orange-100 text-orange-600">Unpaid</span>' : ''}
                                </div>
                                <span class="text-[9px] font-bold text-slate-400 uppercase tracking-widest">${e.cat}</span>
                            </div>
                        </div>
                        <div class="flex items-center gap-4">
                            <span class="text-sm font-800 text-slate-800 mono">RM ${parseFloat(e.val).toLocaleString(undefined, {minimumFractionDigits: 2})}</span>
                            <div class="flex gap-0.5">
                                <button onclick="openEdit(${e.id})" class="text-slate-300 hover:text-indigo-600 p-1.5 rounded-lg hover:bg-indigo-50"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" stroke-width="2"/></svg></button>
                                <button onclick="removeEntry(${e.id})" class="text-slate-300 hover:text-rose-600 p-1.5 rounded-lg hover:bg-rose-50"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" stroke-width="2"/></svg></button>
                            </div>
                        </div>
                    </div>
                `).join('');
        }

        function confirmEntry() {
            const l = document.getElementById('inLabel'), v = document.getElementById('inVal'), c = document.getElementById('inCat'), id = document.getElementById('editId').value;
            if(!l.value || !v.value) return;
            const data = { label: l.value.trim(), val: parseFloat(v.value), cat: c.value };
            if (id) {
                const i = state.entries.findIndex(e => e.id == id);
                if (i !== -1) state.entries[i] = { ...state.entries[i], ...data };
            } else state.entries.unshift({ id: Date.now(), ...data, settled: false });
            closeModal(); refreshEverything();
        }

        function openEdit(id) {
            const e = state.entries.find(x => x.id === id);
            if (!e) return;
            document.getElementById('modalTitle').innerText = "Edit";
            document.getElementById('editId').value = id;
            document.getElementById('inLabel').value = e.label;
            document.getElementById('inVal').value = e.val;
            document.getElementById('inCat').value = e.cat;
            openModal();
        }

        function removeEntry(id) { state.entries = state.entries.filter(e => e.id !== id); refreshEverything(); }
        function togglePaid(id) { const e = state.entries.find(x => x.id === id); if(e) e.settled = !e.settled; refreshEverything(); }
        function handleSalaryUpdate(v) { state.salary = parseFloat(v) || 0; refreshEverything(); }
        function handleTaxUpdate(v) { state.taxRate = parseFloat(v) || 0; refreshEverything(); }
        function updateFilter(f) { state.filter = f; refreshEverything(); }
        function saveNewCat() {
            const n = document.getElementById('newCatInput').value.trim();
            if(n && !state.categories.includes(n)) { state.categories.push(n); document.getElementById('newCatInput').value = ''; toggleNewCat(); refreshEverything(); }
        }
        function openModal() { document.getElementById('entryModal').classList.remove('hidden'); }
        function closeModal() { document.getElementById('entryModal').classList.add('hidden'); document.getElementById('editId').value = ""; document.getElementById('modalTitle').innerText = "Record Expense"; document.getElementById('inLabel').value = ""; document.getElementById('inVal').value = ""; }
        function toggleNewCat() { document.getElementById('newCatBox').classList.toggle('hidden'); }

        window.onload = () => {
            const saved = localStorage.getItem('wallet_compact_v2');
            if(saved) state = JSON.parse(saved);
            document.getElementById('salaryInput').value = state.salary;
            document.getElementById('taxInput').value = state.taxRate;
            refreshEverything();
        };
    </script>
</body>
</html>
