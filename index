            <div class="flex flex-wrap items-center gap-3 bg-white/50 p-1.5 rounded-[20px] border border-white/20 backdrop-blur-md">
                <div class="px-3 border-r border-slate-200">
                    <label class="block text-[9px] font-bold text-slate-400 uppercase tracking-widest mb-0.5">Salary</label>
                    <div class="flex items-center gap-1">
                        <span class="text-slate-400 font-bold text-xs">RM</span>
                        <input id="salaryInput" type="number" oninput="handleSalaryUpdate(this.value)" class="w-16 bg-transparent font-800 outline-none text-slate-800 text-sm">
                    </div>
                </div>
                <div class="px-3">
                    <label class="block text-[9px] font-bold text-slate-400 uppercase tracking-widest mb-0.5">Tax</label>
                    <div class="flex items-center gap-1">
                        <input id="taxInput" type="number" oninput="handleTaxUpdate(this.value)" class="w-8 bg-transparent font-800 outline-none text-slate-800 text-sm">
                        <span class="text-slate-400 font-bold text-xs">%</span>
                    </div>
                </div>
                <button onclick="openModal()" class="btn-action text-sm">
                    + Expense
                </button>
            </div>
        </nav>

        <!-- DASHBOARD GRID -->
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
            
            <!-- LEFT COLUMN -->
            <div class="lg:col-span-8 space-y-6">
                <!-- HERO CARD -->
                <div class="main-balance-card p-8 md:p-10 shadow-xl">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
                        <div class="space-y-1">
                            <span class="text-indigo-300 font-bold text-[10px] uppercase tracking-[0.2em]">Available Balance</span>
                            <h2 id="trueBalance" class="text-4xl md:text-5xl font-800 tracking-tighter">RM 0.00</h2>
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div class="bg-white/10 p-4 rounded-2xl border border-white/5">
                                <span class="text-indigo-200 font-bold text-[9px] uppercase tracking-widest block mb-1">Daily Cap</span>
                                <p id="dailyBudget" class="text-xl font-700 text-white">RM 0.00</p>
                            </div>
                            <div class="bg-emerald-500/20 p-4 rounded-2xl border border-emerald-500/20">
                                <span class="text-emerald-300 font-bold text-[9px] uppercase tracking-widest block mb-1">Total Paid</span>
                                <p id="totalDeductions" class="text-xl font-700 text-emerald-100">RM 0.00</p>
                            </div>
                        </div>
                    </div>
                    <div class="mt-6 pt-6 border-t border-white/10 flex justify-between items-center">
                        <span class="text-indigo-300/60 text-[10px] font-bold uppercase tracking-widest">Cycle: <span id="daysRemaining">0</span> Days Remaining</span>
                        <div class="flex items-center gap-2">
                            <span class="text-[10px] font-bold text-white/40 uppercase tracking-widest">Tax Hold:</span>
                            <span id="taxReserveDisplay" class="text-sm font-bold text-orange-300">RM 0.00</span>
                        </div>
